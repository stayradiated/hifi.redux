{
  "name": "@stayradiated/hifi-redux",
  "version": "2.2.0",
  "description": "Redux store for hifi.kitchen",
  "main": "dist/index.js",
  "author": "George Czabania <george@czabania.com>",
  "license": "ISC",
  "scripts": {
    "build": "pkg-clean && rollup -c",
    "prepublish": "npm run build",
    "test": "pkg-test",
    "flow": "pkg-flow",
    "coverage": "pkg-coverage",
    "lint": "pkg-lint"
  },
  "devDependencies": {
    "@mishguru/package": "^1.15.5",
    "babel-plugin-external-helpers": "^6.22.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup": "^0.56.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-local-resolve": "^1.0.7",
    "eslint-config-mishguru": "^1.10.0"
  },
  "dependencies": {
    "@stayradiated/mandarin": "^3.1.3",
    "babel-polyfill": "^6.26.0",
    "perplexed": "^4.2.1",
    "redux": "^3.7.2",
    "redux-localstorage": "1.0.0-rc5",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1"
  },
  "babel": {
    "presets": [
      "flow",
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
